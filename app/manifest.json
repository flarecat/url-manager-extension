{
  "manifest_version": 3,
  "name": "URL Manager",
  "version": "1.0.0",
  "description": "開いているページのURLを管理できるChrome拡張機能",
  "permissions": [
    "tabs",
    "tabGroups",
    "storage",
    "clipboardRead",
    "clipboardWrite",
    "sidePanel"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "options_page": "options.html",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
